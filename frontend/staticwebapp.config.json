{
  "name": "learnovatex-frontend",
  "buildCommand": "npm run build",
  "outputLocation": "build",
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/videos/*",
      "/assets/*",
      "/static/*",
      "/*.css",
      "/*.js",
      "/*.png",
      "/*.jpg",
      "/*.jpeg",
      "/*.svg",
      "/*.mp4",
      "/*.webm"
    ]
  },
  "globalHeaders": {
    "Cache-Control": "no-cache"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".mp4": "video/mp4",
    ".webm": "video/webm"
  }
}
