# =====================================================
# LearnovateX – AI Learning & Career Readiness Platform
# Environment Configuration
# =====================================================

# =========================
# APP ENVIRONMENT
# =========================
APP_NAME=LearnovateX
ENVIRONMENT=development
DEBUG=true


# =========================
# DATABASE CONFIGURATION
# =========================
# Using SQLite (recommended for final year project)
DATABASE_URL=sqlite:///./learnovatex.db

# Optional MongoDB (NOT REQUIRED now)
# MONGO_URL=mongodb://localhost:27017
# DB_NAME=learnovatex


# =========================
# CORS CONFIGURATION
# =========================
# Allow all for development & college demo
CORS_ORIGINS=*


# =========================
# AUTHENTICATION & SECURITY
# =========================
JWT_SECRET=learnovatex_super_secure_jwt_key_2026
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7


# =========================
# AI MODE CONFIGURATION
# =========================
# Options:
# demo  → FREE, rule-based/sample AI (WORKS OFFLINE)
# azure → Azure OpenAI (REQUIRES INTERNET)
AI_MODE=demo


# =========================
# AZURE OPENAI (REQUIRED FOR AI FEATURES)
# =========================
# Get these from your Azure OpenAI resource in the Azure portal
# 1. Go to https://portal.azure.com
# 2. Create an Azure OpenAI resource
# 3. Go to "Keys and Endpoint" section
# 4. Copy the API key and endpoint URL
# 5. Create a GPT-4 deployment and copy the deployment name

AZURE_OPENAI_API_KEY=your_actual_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4


# =========================
# FILE STORAGE (LOCAL – FREE)
# =========================
UPLOAD_DIR=uploads
RESUME_UPLOAD_DIR=uploads/resumes
CODE_UPLOAD_DIR=uploads/code_submissions

MAX_FILE_SIZE_MB=5
ALLOWED_RESUME_FORMATS=pdf


# =========================
# APPLICATION LIMITS
# =========================
MAX_DAILY_AI_REQUESTS=20
MAX_CODE_SUBMISSIONS_PER_DAY=50
MAX_INTERVIEWS_PER_DAY=5


# =========================
# LOGGING
# =========================
LOG_LEVEL=INFO
LOG_FILE=logs/learnovatex.log


# =========================
# OPTIONAL: EMAIL (NOT REQUIRED NOW)
# =========================
ENABLE_EMAIL=false
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=


# =========================
# OPTIONAL: CLOUD STORAGE (NOT USED)
# =========================
# AZURE_STORAGE_CONNECTION_STRING=
# AWS_S3_BUCKET=
# AWS_S3_REGION=